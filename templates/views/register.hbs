<div class="container centered">
    <form action="/register" method="post" class="u-max-full-width">
        <div class="row">
            <label for="username">Username:</label>
            <input class="u-full-width" type="text" name="username"/><br/>
        </div>
        <div class="row">
            <label for="email">Email:</label>
            <input class="u-full-width" type="text" name="email"/><br/>
        </div>
        <div class="row">
            <label for="password">Password:</label>
            <input class="u-full-width" type="password" name="password"/>
        </div>
        <div class="row">
            <label for="passwordConfirm">Confirm Password:</label>
            <input class="u-full-width" type="password" name="passwordConfirm"/>
        </div>
        <div class="row">
            <input class="button-primary" type="submit" value="Submit"/>
        </div>
    </form>
</div>